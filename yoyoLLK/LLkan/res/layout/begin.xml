	android:background="@drawable/back"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<TextView android:id="@+id/logo" android:text="" android:textSize="25dp"
	     android:paddingLeft="5dp" android:layout_width="126dp"
	      android:background="@drawable/dialog" android:layout_height="92dp"
	       android:textStyle="bold" android:paddingTop="15dp" 
	       android:textColor="@color/purple" android:layout_x="24dp"
